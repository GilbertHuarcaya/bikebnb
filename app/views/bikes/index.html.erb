<%= render "shared/navbar" %>
<div class="banner">
  <div class="container">
    <h1>Bike BnB - Alquiler de Bicicletas</h1>
    <p>Movilizarce por la ciudad nunca fue tan facil</p>
    <%= link_to 'Alquilar', bikes_path , class: "btn btn-success" %>
  </div>
</div>
<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">RENT BIKES</h3>
  </div>
  <div class="row">
    <% @bikes.each do |bike| %>
      <div class="co-12 colsm-6 col-md-4 mb-3">
        <%= link_to bike_path(bike), class: "text-decoration-none" do %>
        <% if bike.photo.key != nil %>
          <div class="card-category"
          data-aos="zoom-in"
          style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url
          ('<%= cl_image_path @bike.photo.key, height: 300, crop: :fill %>')" >
            <%= bike.model %>
            <%= bike.description %>
          </div>
        <% else bike.photo.key == nil %>
          <div class="card-category"
          data-aos="zoom-in"
          style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://images.unsplash.com/photo-1626118703370-f60e1982b320?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80')" >
            <%= bike.model %> <br>
            <%= bike.description %> <br>
            <%= bike.price %>
          </div>
        <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
