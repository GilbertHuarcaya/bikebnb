<div
  class="view flex-grow-1"
  style="background-image: url('https://images.unsplash.com/photo-1618674054359-088b66494a9a?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1254&q=80'); background-repeat: no-repeat; background-size: cover; background-position: center center;">
    <div class="container ">
      <div class="row w-100">
        <div class="col-12 col-md-6 offset-lg-3 m-auto">
          <div class="bg-white rounded p-3 shadow">
            <div
              class="card-category form"
              style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1454165205744-3b78555e5572?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80)"
            ></div>
            <br />
            <div class="sesion"><h2>¡Inicia sesión!</h2></div>

            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-inputs">
                <%= f.input :email,
                            placeholder: "my_email@gmail.com",
                            required: false,
                            autofocus: true,
                            input_html: {
                              autocomplete: "email",
                            } %>
                <%= f.input :password,
                            placeholder: "*********",
                            required: false,
                            input_html: {
                              autocomplete: "current-password",
                            } %>
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div>

              <div class="form-actions">
                <%= f.button :submit, "Log in", class: "btn btn-flat" %>
              </div>
              <br />
            <% end %>
            <div class="links d-flex "><%= render "devise/shared/links" %></div>
          </div>
        </div>
      </div>
    </div>
   </div>
