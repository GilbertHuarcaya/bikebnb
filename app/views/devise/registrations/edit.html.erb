<%= render "shared/navbar" %>
<div class="container">

  <div class="profile-tabs">
    <ul
      class="nav nav-pills nav-pills-icons justify-content-center"
      role="tablist"
    >
      <li class="nav-item">
        <a class="nav-link active" href="#studio" role="tab" data-toggle="tab">
          <i class="far fa-user-circle icon-size"></i>
          <p>Profile</p>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#works" role="tab" data-toggle="tab">
          <i class="fas fa-bicycle icon-size"></i>
          <p>My Bikes</p>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#favorite" role="tab" data-toggle="tab">
          <i class="far fa-edit icon-size"></i>
          <p>Update Profile</p>
        </a>
      </li>
    </ul>
  </div>

  <div class="tab-content tab-space">
    <div class="tab-pane active text-center gallery" id="studio">
      <div class="container py-5">
        <div class="row w-100">
          <div class="col-12 col-md-6 offset-lg-3 m-auto">
            <div class="bg-white rounded p-3 shadow position-relative">
              <div class="profile-info mb-4">
    <% if current_user.photo.key != nil %>
      <%= cl_image_tag current_user.photo.key,
                       class: "avatar dropdown-toggle",
                       id: "profile-avatar",
                       data: {
                         toggle: "dropdown",
                       },
                       'aria-haspopup': true,
                       'aria-expanded': false %>
    <% elsif current_user.photo.key == nil %>
      <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier",
                    class: "avatar dropdown-toggle",
                    id: "profile-avatar",
                    data: {
                      toggle: "dropdown",
                    },
                    'aria-haspopup': true,
                    'aria-expanded': false %>
    <% end %>
  </div>
              <p>Name: <%= current_user.firstname.capitalize %> <%= current_user.lastname.capitalize %></p>
              <p>Email: <%= current_user.email %></p>
              <p>City: <%= current_user.city.capitalize %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="tab-pane text-center gallery" id="works">
      <%= link_to "My bikes", my_bikes_bikes_path, class: "btn btn-gradient" %>
    </div>
    <div class="tab-pane " id="favorite">
      <%= render "form" %>
    </div>
  </div>
</div>
